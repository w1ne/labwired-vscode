{
    "name": "labwired-vscode",
    "displayName": "LabWired Debugger",
    "version": "0.11.1",
    "publisher": "w1ne",
    "description": "LabWired Debug Adapter for VS Code",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "*",
        "onDebug",
        "workspaceContains:**/Cargo.toml",
        "workspaceContains:**/Makefile"
    ],
    "contributes": {
        "debuggers": [
            {
                "type": "labwired",
                "label": "LabWired Debug",
                "program": "./out/extension.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to the ELF firmware file",
                                "default": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware"
                            },
                            "system": {
                                "type": "string",
                                "description": "Path to the system configuration YAML",
                                "default": "${workspaceFolder}/system.yaml"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Stop at the entry point after launch",
                                "default": true
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Working directory for the simulation",
                                "default": "${workspaceFolder}"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "labwired",
                        "request": "launch",
                        "name": "LabWired: Launch",
                        "program": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware"
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "labwired.compileAndRun",
                "title": "Run in LabWired",
                "icon": "$(play)"
            },
            {
                "command": "labwired.showDashboard",
                "title": "Show Dashboard"
            },
            {
                "command": "labwired.showTimeline",
                "title": "LabWired: Show Timeline",
                "category": "LabWired"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "labwired",
                    "title": "LabWired",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "views": {
            "labwired": [
                {
                    "type": "webview",
                    "id": "labwired.dashboard",
                    "name": "Live Dashboard",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "menus": {
            "editor/title": [
                {
                    "command": "labwired.compileAndRun",
                    "group": "navigation",
                    "when": "resourceExtname == .rs || resourceExtname == .c || resourceExtname == .cpp || resourceExtname == .h"
                }
            ],
            "commandPalette": [
                {
                    "command": "labwired.compileAndRun",
                    "when": "true"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^16.x",
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.5"
    }
}
