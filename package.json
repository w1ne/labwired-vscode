{
    "name": "labwired-vscode",
    "displayName": "LabWired Debugger",
    "version": "0.11.1",
    "license": "MIT",
    "publisher": "w1ne",
    "description": "LabWired Debug Adapter for VS Code",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "*",
        "onDebug",
        "workspaceContains:**/Cargo.toml",
        "workspaceContains:**/Makefile"
    ],
    "contributes": {
        "configuration": {
            "title": "LabWired",
            "properties": {
                "labwired.demoUi.mode": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "off",
                        "on"
                    ],
                    "default": "auto",
                    "description": "Demo-only Command Center HUD/UART widgets. 'auto' enables in development mode and disables in production installs."
                }
            }
        },
        "debuggers": [
            {
                "type": "labwired",
                "label": "LabWired Debug",
                "program": "./out/extension.js",
                "runtime": "node",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to the ELF firmware file",
                                "default": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware"
                            },
                            "systemConfig": {
                                "type": "string",
                                "description": "Path to the system configuration YAML (defines memory map, peripherals)",
                                "default": "${workspaceFolder}/system.yaml"
                            },
                            "stopOnEntry": {
                                "type": "boolean",
                                "description": "Automatically stop at the entry point after launch",
                                "default": true
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Working directory for the simulation",
                                "default": "${workspaceFolder}"
                            },
                            "args": {
                                "type": "array",
                                "description": "Command line arguments passed to the program",
                                "default": [],
                                "items": {
                                    "type": "string"
                                }
                            },
                            "env": {
                                "type": "object",
                                "description": "Environment variables passed to the program",
                                "default": {}
                            },
                            "trace": {
                                "type": "boolean",
                                "description": "Enable verbose DAP logging",
                                "default": false
                            }
                        }
                    },
                    "executionMode": {
                        "type": "string",
                        "enum": [
                            "local",
                            "docker"
                        ],
                        "default": "local",
                        "description": "Where to run the simulation and debugger."
                    },
                    "docker": {
                        "type": "object",
                        "properties": {
                            "image": {
                                "type": "string",
                                "default": "w1ne/labwired-dev:latest",
                                "description": "Docker image to use for simulation and building."
                            },
                            "autoPull": {
                                "type": "boolean",
                                "default": true,
                                "description": "Automatically pull the Docker image if missing."
                            },
                            "runArgs": {
                                "type": "array",
                                "default": [],
                                "description": "Additional arguments for 'docker run'.",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "labwired",
                        "request": "launch",
                        "name": "LabWired: Launch",
                        "program": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware",
                        "stopOnEntry": true
                    },
                    {
                        "type": "labwired",
                        "request": "launch",
                        "name": "LabWired: Launch with System Config",
                        "program": "${workspaceFolder}/target/thumbv7m-none-eabi/debug/firmware",
                        "systemConfig": "${workspaceFolder}/system.yaml",
                        "stopOnEntry": true
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "labwired.compileAndRun",
                "title": "Run in LabWired",
                "icon": "$(play)"
            },
            {
                "command": "labwired.showDashboard",
                "title": "Show Command Center"
            },
            {
                "command": "labwired.showTopology",
                "title": "LabWired: Show System Topology",
                "category": "LabWired"
            },
            {
                "command": "labwired.showTimeline",
                "title": "LabWired: Show Timeline",
                "category": "LabWired"
            },
            {
                "command": "labwired.showGraphing",
                "title": "LabWired: Show Logic Analyzer",
                "category": "LabWired"
            },
            {
                "command": "labwired.showMemoryInspector",
                "title": "LabWired: Show Memory Inspector",
                "category": "LabWired"
            },
            {
                "command": "labwired.showTraceList",
                "title": "LabWired: Show Instruction Trace",
                "category": "LabWired"
            },
            {
                "command": "labwired.showProfiling",
                "title": "LabWired: Show Performance Profiler",
                "category": "LabWired"
            },
            {
                "command": "labwired.startSimulator",
                "title": "Start Simulator",
                "icon": "$(play)"
            },
            {
                "command": "labwired.stopSimulator",
                "title": "Stop Simulator",
                "icon": "$(stop)"
            },
            {
                "command": "labwired.restartSimulator",
                "title": "Restart Simulator",
                "icon": "$(refresh)"
            },
            {
                "command": "labwired.configureProject",
                "title": "Configure Project...",
                "icon": "$(gear)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "labwired",
                    "title": "LabWired",
                    "icon": "$(circuit-board)"
                }
            ]
        },
        "views": {
            "labwired": [
                {
                    "type": "webview",
                    "id": "labwired.commandCenter",
                    "name": "Command Center",
                    "icon": "$(circuit-board)"
                },
                {
                    "id": "labwired.simulator",
                    "name": "Simulator Management",
                    "icon": "$(play-circle)"
                },
                {
                    "id": "labwired.peripherals",
                    "name": "Peripherals",
                    "icon": "$(chip)"
                },
                {
                    "id": "labwired.rtos_tasks",
                    "name": "RTOS Tasks",
                    "icon": "$(layers)"
                }
            ]
        },
        "menus": {
            "editor/title": [
                {
                    "command": "labwired.compileAndRun",
                    "group": "navigation",
                    "when": "resourceExtname == .rs || resourceExtname == .c || resourceExtname == .cpp || resourceExtname == .h"
                }
            ],
            "commandPalette": [
                {
                    "command": "labwired.compileAndRun",
                    "when": "true"
                }
            ]
        }
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "npm run compile && node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "^16.x",
        "@types/vscode": "^1.75.0",
        "@vscode/test-electron": "^2.3.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5"
    }
}
